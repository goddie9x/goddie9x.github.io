{
    "name": "Remove suggest youtube, pause overlay",
    "description": "Remove suggest or overlay youtube.",
    "version": "0.0.1",
    "manifest_version": 2,
    "browser_action": {
        "default_title": "f* suggest",
        "default_icon": "./assets/medias/logo.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "background": {
        "scripts": ["./assets/scripts/background.js"],
        "persistent": true
    },
    "content_scripts": [{
        "all_frames": true,
        "js": ["./scripts/content.js"],
        "run_at": "document_idle"
    }]
}